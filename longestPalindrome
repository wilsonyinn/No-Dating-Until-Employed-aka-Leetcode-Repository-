class Solution:
    def longestPalindrome(self, s: str) -> str:
        res = ""    #stores the longest palindrome
        resLen = 0  #len of longest palindrome
        
        for i in range(len(s)):
            #scan for odd sized palindromes
            left, right = i, i
            while left >=0 and right < len(s) and s[left] == s[right]: #checks if its a palindrome & in bound
                if (right - left + 1) > resLen: #check if its the longest -> then update res & resLen
                    res = s[left : right + 1] 
                    resLen = right - left + 1
                left -= 1
                right += 1
                
            left, right = i, i+1
            while left >=0 and right < len(s) and s[left] == s[right]: #checks if its a palindrome & in bound
                if (right - left + 1) > resLen: #check if its the longest -> then update res & resLen
                    res = s[left : right + 1] 
                    resLen = right - left + 1
                left -= 1
                right += 1
        return res
    
    #time complexity: O(n^2) because it takes O(n) time to determine if its palindrome and we're performing this operation O(n)
    #space complexity: O(1) no extra space used
